
@model IEnumerable<Peluqueria_canina_chichi.Models.Categoria>

@{
    ViewBag.Title = "Categorias";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nueva Categoria", "Crear")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodCategoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
            @*<img src="~/AppFile/Images" alt="" height=100 width=200 />*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodCategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.CodCategoria }) |
                @Html.ActionLink("Eliminar", "Eliminar", new { id = item.CodCategoria })
            </td>
        </tr>
    }

</table>
